<h1><%= @article.title %></h1>
<p>
  Tags: 
  <% @article.tags.each do |tag| %>
  <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
<p><%= @article.body %></p>
<ul>
  <li>
    <%= link_to "<< Back To Articles List", articles_path %>
  </li>
  <li>
    <%= link_to "Delete Article", article_path(@article), method: :delete, data: { confirm: "Really delete this article?" } %>
  </li>
  <li>
    <%= link_to "Edit Article", edit_article_path(@article) %>
  </li>
</ul>
<h3>Comments (<%= @article.comments.size %>)</h3>
<%= # Extract each article from @article.comments and give to articles/comments
    render partial: 'articles/comment', collection: @article.comments %>
<%= # Display a form for a new comment
    render partial: 'comments/form' %>